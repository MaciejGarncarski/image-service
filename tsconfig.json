{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node10",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "vitest/globals"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "swc": true
  }
}