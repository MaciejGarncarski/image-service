{
	"name": "file-uploader",
	"type": "module",
	"scripts": {
		"dev": "pnpm tsx watch --clear-screen=false --env-file=.env src/app.ts",
		"build": "pnpm tsc --build",
		"start": "pnpm build && node --env-file=.env ./dist/src/app.js",
		"lint": "pnpm eslint --fix --max-warnings=0 .",
		"format": "pnpm prettier --write .",
		"lint-format": "pnpm lint && pnpm format",
		"test": "NODE_ENV=test pnpm vitest",
		"test-ui": "pnpm vitest --ui --coverage.enabled=true",
		"coverage": "NODE_ENV=test pnpm vitest run --coverage"
	},
	"dependencies": {
		"@fastify/cors": "^10.1.0",
		"@fastify/env": "^5.0.2",
		"@fastify/multipart": "^9.0.3",
		"@fastify/sensible": "^6.0.3",
		"@fastify/swagger": "^9.5.1",
		"@fastify/swagger-ui": "^5.2.3",
		"@fastify/type-provider-typebox": "^5.2.0",
		"@sinclair/typebox": "^0.33.22",
		"chokidar": "^4.0.3",
		"env-schema": "^6.0.1",
		"fastify": "^5.5.0",
		"file-type": "^19.6.0",
		"nanoid": "^5.1.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@types/node": "^22.17.2",
		"@vitest/coverage-v8": "^2.1.9",
		"@vitest/ui": "^2.1.9",
		"eslint": "^9.33.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-unicorn": "^55.0.0",
		"eslint-plugin-unused-imports": "^4.2.0",
		"globals": "^15.15.0",
		"pino-pretty": "^11.3.0",
		"prettier": "^3.6.2",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0",
		"vitest": "^2.1.9"
	}
}
